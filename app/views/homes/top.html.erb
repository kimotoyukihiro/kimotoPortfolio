<div class="row">
	<div class ="col-lg-1"></div>
	<div class = "col-lg-4">
		<h1>美容商材でもっと綺麗に</h1>
	</div>
</div>

<div class="row">
	<div class ="col-lg-3"></div>

	<div class="col-lg-6">
		<p class = "center-block">
			<%= image_tag 'top.jpg',size:'700x500' %>
		</p>
	</div>

	<div class = "col-lg-3"></div>
</div>

<div class="row">
	<div class="col-lg-1"></div>

	<div class="col-lg-10">
		<p class = "center-block">
			<h3>新規投稿</h3>
			<% @items.first(4).each do |item| %>
			<div class="col-lg-3 product-box space">
				<div class = "row">
					<%= link_to item_path(item) do %>
						<%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg',size:'100x100'%>
					<% end %>
				</div>
				<div class = "row">
					<%= item.title %>
				</div>
			</div>
			<% end %>
		</p>
	</div>
<div class="col-lg-1"></div>

<div class="col-lg-10">
	<p class = "pull-right">
		<%= link_to "もっと見る" ,items_path %>
	</p>
</div>